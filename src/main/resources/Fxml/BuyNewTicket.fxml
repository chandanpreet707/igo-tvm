<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="concordia.soen6611.igo_tvm.controllers.BuyNewTicketController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../styles/BuyNewTicket.css"
            styleClass="buy-page">

    <!-- TOP-LEVEL DEFINITIONS -->
    <fx:define>
        <ToggleGroup fx:id="riderGroup"/>
        <ToggleGroup fx:id="tripGroup"/>
    </fx:define>

    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="header">
            <padding><Insets top="14" right="22" bottom="14" left="22"/></padding>
            <HBox alignment="CENTER_LEFT" spacing="6">
                <ImageView fitWidth="32" fitHeight="32" preserveRatio="true">
                    <image><Image url="@../images/maple.png"/></image>
                </ImageView>
                <Label text="STM" styleClass="brand"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Fare Selection" styleClass="title" fx:id="buyNewTicketLabel"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="clockLabel" styleClass="clock" minWidth="150"
                   text="Nov 27, 2024&#10;10:31 AM"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="18" alignment="TOP_LEFT">
            <padding><Insets top="24" right="24" bottom="18" left="24"/></padding>

            <!-- Left menu: quick selectors for trip type -->
            <VBox spacing="12" prefWidth="260" styleClass="leftMenu">
                <Button styleClass="menu-btn" text="Single Trip"   onAction="#onMenuSingle"/>
                <Button styleClass="menu-btn" text="Multiple Trip" onAction="#onMenuMulti"/>
                <Button styleClass="menu-btn" text="Day Pass"      onAction="#onMenuDay"/>
                <Button styleClass="menu-btn" text="Monthly Pass"  onAction="#onMenuMonthly"/>
                <Button styleClass="menu-btn" text="Weekend Pass"  onAction="#onMenuWeekend"/>
            </VBox>

            <!-- Main panel -->
            <VBox spacing="20" HBox.hgrow="ALWAYS">
                <Label fx:id="questionLabel" styleClass="question"
                       text="What would you like to buy? / Qu’aimeriez-vous acheter ?"/>

                <GridPane hgap="14" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT"  percentWidth="22"/>
                        <ColumnConstraints halignment="LEFT"  percentWidth="38"/>
                        <ColumnConstraints halignment="LEFT"  percentWidth="16"/>
                        <ColumnConstraints halignment="RIGHT" percentWidth="24"/>
                    </columnConstraints>

                    <!-- Rider segmented (4 options) -->
                    <Label text="Rider Type | Type d’usager" styleClass="label"
                           GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <FlowPane hgap="8" vgap="8" prefWrapLength="380"
                              GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <ToggleButton fx:id="adultBtn"   text="Adult"
                                      toggleGroup="$riderGroup" selected="true"
                                      onAction="#onRiderTypeChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="studentBtn" text="Student"
                                      toggleGroup="$riderGroup"
                                      onAction="#onRiderTypeChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="seniorBtn"  text="Senior"
                                      toggleGroup="$riderGroup"
                                      onAction="#onRiderTypeChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="touristBtn" text="Tourist"
                                      toggleGroup="$riderGroup"
                                      onAction="#onRiderTypeChange" styleClass="seg-btn"/>
                    </FlowPane>

                    <!-- Trip type segmented (5 options) -->
                    <Label text="Trip Type | Type de titre" styleClass="label"
                           GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <FlowPane hgap="8" vgap="8" prefWrapLength="380"
                              GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <ToggleButton fx:id="tripSingle"  text="Single Trip"
                                      toggleGroup="$tripGroup" selected="true"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripMulti"   text="Multiple Trip"
                                      toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripDay"     text="Day Pass"
                                      toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripMonthly" text="Monthly Pass"
                                      toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripWeekend" text="Weekend Pass"
                                      toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                    </FlowPane>

                    <!-- Unit price -->
                    <Label text="Price (each) | Prix (unité)" styleClass="label"
                           GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="unitPriceValue" text="3.75" styleClass="value"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Quantity -->
                    <Label text="Quantity | Quantité" styleClass="label"
                           GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <HBox spacing="6" alignment="CENTER_LEFT"
                          GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <Button onAction="#decrementQty" styleClass="qty-btn" prefWidth="56" prefHeight="36">
                            <graphic>
                                <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                                    <image><Image url="@../images/minus.png"/></image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <TextField fx:id="qtyField" text="1" alignment="CENTER"
                                   prefWidth="70" styleClass="qty-field"/>
                        <Button onAction="#incrementQty" styleClass="qty-btn" prefWidth="56" prefHeight="36">
                            <graphic>
                                <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                                    <image><Image url="@../images/plus.png"/></image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>

                    <!-- Total -->
                    <Label text="Total:" styleClass="total-label"
                           GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <Label fx:id="totalValue" text="3.75" styleClass="total-value"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <!-- Add to cart -->
                    <Button fx:id="addToCartBtn" onAction="#addToCart"
                            text="Add to Cart | Ajouter au Panier"
                            styleClass="primary" prefWidth="260" prefHeight="44"
                            GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                </GridPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer" spacing="10">
            <padding><Insets top="10" right="18" bottom="10" left="18"/></padding>
            <Button fx:id="backBtn" onAction="#onBack" styleClass="back-btn"
                    prefHeight="34" minHeight="34">
                <graphic>
                    <FontAwesomeIconView glyphName="ARROW_LEFT" glyphSize="18" styleClass="glyph-white-sm"/>
                </graphic>
                <tooltip><Tooltip text="Back to Home"/></tooltip>
            </Button>
            <Label text="Help / Aide" styleClass="help"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="View Cart | Voir au Panier" disable="true"
                    styleClass="footer-ghost" prefHeight="30"/>
        </HBox>
    </bottom>
</BorderPane>
