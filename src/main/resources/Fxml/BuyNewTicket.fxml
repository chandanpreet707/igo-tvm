<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="concordia.soen6611.igo_tvm.controllers.BuyNewTicketController"
            prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@../styles/BuyNewTicket.css"
            styleClass="buy-page">

    <fx:define>
        <ToggleGroup fx:id="riderGroup"/>
        <ToggleGroup fx:id="tripGroup"/>
    </fx:define>

    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="header">
            <padding><Insets top="14" right="22" bottom="14" left="22"/>
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="6">
                <ImageView fitWidth="32" fitHeight="32" preserveRatio="true" onMouseClicked="#onBrandClick">
                    <image>
                        <Image url="@../images/maple.png"/>
                    </image>
                </ImageView>
                <Label fx:id="brandLink" text="STM" styleClass="brand" onMouseClicked="#onBrandClick"/>
            </HBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Fare Selection" styleClass="title" fx:id="buyNewTicketLabel"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="clockLabel" styleClass="clock" minWidth="150"
                   text="Nov 27, 2024&#10;10:31 AM"/>
        </HBox>
    </top>

    <center>
        <!-- Fill horizontally, fixed left menu + elastic content -->
        <HBox spacing="18" alignment="TOP_LEFT" VBox.vgrow="ALWAYS">
            <padding><Insets top="24" right="12" bottom="18" left="12"/></padding>

            <!-- LEFT MENU (unchanged, fixed width) -->
            <VBox spacing="12" prefWidth="260" styleClass="leftMenu">
                <Button fx:id="menuSingleBtn"  styleClass="menu-btn" text="Single Trip"   onAction="#onMenuSingle"/>
                <Button fx:id="menuDayBtn"     styleClass="menu-btn" text="Day Pass"      onAction="#onMenuDay"/>
                <Button fx:id="menuMonthlyBtn" styleClass="menu-btn" text="Monthly Pass"  onAction="#onMenuMonthly"/>
                <Button fx:id="menuWeekendBtn" styleClass="menu-btn" text="Weekend Pass"  onAction="#onMenuWeekend"/>
                <Button fx:id="menuWeeklyBtn"  styleClass="menu-btn" text="Weekly Pass"   onAction="#onMenuWeekly"/>
            </VBox>

            <!-- RIGHT CONTENT (now fully responsive) -->
            <VBox spacing="20" HBox.hgrow="ALWAYS" fillWidth="true">
                <Label fx:id="questionLabel" styleClass="question" maxWidth="Infinity"/>

                <GridPane hgap="16" vgap="14" maxWidth="Infinity">
                    <!-- Columns tuned to use full width; 2 & 4 grow -->
                    <columnConstraints>
                        <ColumnConstraints percentWidth="18" halignment="LEFT"/>
                        <ColumnConstraints percentWidth="42" halignment="LEFT" hgrow="ALWAYS"/>
                        <ColumnConstraints percentWidth="10" halignment="LEFT"/>
                        <ColumnConstraints percentWidth="30" halignment="RIGHT" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- Rider Type -->
                    <Label fx:id="riderTypeLabel" styleClass="label"
                           GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <FlowPane hgap="8" vgap="8" prefWrapLength="600"
                              GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="3">
                        <ToggleButton fx:id="adultBtn"   toggleGroup="$riderGroup" selected="true"
                                      onAction="#onRiderTypeChange" styleClass="seg-btn seg-btn--icon">
                            <graphic>
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <StackPane styleClass="seg-icon">
                                        <org.kordamp.ikonli.javafx.FontIcon iconLiteral="fas-user" iconSize="18" styleClass="seg-icon__glyph"/>
                                    </StackPane>
                                    <Label styleClass="seg-text"/>
                                </HBox>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="studentBtn" toggleGroup="$riderGroup"
                                      onAction="#onRiderTypeChange" styleClass="seg-btn seg-btn--icon">
                            <graphic>
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <StackPane styleClass="seg-icon">
                                        <org.kordamp.ikonli.javafx.FontIcon iconLiteral="fas-user-graduate" iconSize="18" styleClass="seg-icon__glyph"/>
                                    </StackPane>
                                    <Label styleClass="seg-text"/>
                                </HBox>
                            </graphic>
                        </ToggleButton>
                        <ToggleButton fx:id="seniorBtn"  toggleGroup="$riderGroup"
                                      onAction="#onRiderTypeChange" styleClass="seg-btn seg-btn--icon">
                            <graphic>
                                <HBox spacing="8" alignment="CENTER_LEFT">
                                    <StackPane styleClass="seg-icon">
                                        <org.kordamp.ikonli.javafx.FontIcon iconLiteral="fas-blind" iconSize="18" styleClass="seg-icon__glyph"/>
                                    </StackPane>
                                    <Label styleClass="seg-text"/>
                                </HBox>
                            </graphic>
                        </ToggleButton>
                    </FlowPane>

                    <!-- Trip Type -->
                    <Label fx:id="tripTypeLabel" styleClass="label"
                           GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <FlowPane hgap="8" vgap="8" prefWrapLength="600"
                              GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3">
                        <ToggleButton fx:id="tripSingle"  toggleGroup="$tripGroup" selected="true"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripDay"     toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripMonthly" toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripWeekend" toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                        <ToggleButton fx:id="tripWeekly"  toggleGroup="$tripGroup"
                                      onAction="#onTripChange" styleClass="seg-btn"/>
                    </FlowPane>

                    <!-- Price each -->
                    <Label fx:id="priceLabel" styleClass="label"
                           GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="unitValueLabel" styleClass="value"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Quantity -->
                    <Label fx:id="quantityLabel" styleClass="label"
                           GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <HBox spacing="6" alignment="CENTER_LEFT"
                          GridPane.rowIndex="3" GridPane.columnIndex="1">
                        <Button fx:id="decBtn" onAction="#decrementQty"
                                styleClass="qty-btn" prefWidth="64" prefHeight="40">
                            <graphic>
                                <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                                    <image><Image url="@../images/minus.png"/></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <TextField fx:id="qtyField" text="1" alignment="CENTER"
                                   prefWidth="84" styleClass="qty-field"/>

                        <Button fx:id="incBtn" onAction="#incrementQty"
                                styleClass="qty-btn" prefWidth="64" prefHeight="40">
                            <graphic>
                                <ImageView fitWidth="14" fitHeight="14" preserveRatio="true">
                                    <image><Image url="@../images/plus.png"/></image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>


                    <!-- Tax -->
                    <Label text="Tax(GST 5% + QST 9.975%):" styleClass="label"
                           GridPane.rowIndex="4" GridPane.columnIndex="0" fx:id="taxLabel"/>
                    <Label fx:id="taxValue" styleClass="value"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <!-- Total -->
                    <Label fx:id="totalLabel" text="Total (incl. 14.975% tax):" styleClass="total-label"
                           GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <Label fx:id="totalValue" styleClass="total-value"
                           GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <!-- Primary CTA aligned right, spans last 2 cols, grows if needed -->
                    <Button fx:id="makePaymentBtn" onAction="#onMakePayment"
                            text="Make Payment | Passer au Paiement"
                            styleClass="primary" maxWidth="Infinity" prefHeight="56"
                            GridPane.rowIndex="5" GridPane.columnIndex="2" GridPane.columnSpan="2"
                            GridPane.halignment="RIGHT"/>
                </GridPane>
            </VBox>
        </HBox>
    </center>



    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer" spacing="10">
            <padding>
                <Insets top="10" right="18" bottom="10" left="18"/>
            </padding>
            <Button fx:id="backBtn" onAction="#onBack" styleClass="back-btn"
                    prefHeight="34" minHeight="34">
                <graphic>
                    <FontIcon iconLiteral="fas-arrow-left" iconSize="18" styleClass="glyph-white-sm"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Back to Home"/>
                </tooltip>
            </Button>
            <Label fx:id="helpLabel" styleClass="help" onMouseClicked="#onHelpClick"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="volumeBtn" onAction="#onVolume" styleClass="footer-icon-btn"
                    prefWidth="44" prefHeight="36" minWidth="44" minHeight="36">
                <graphic>
                    <FontIcon iconLiteral="fas-volume-up" iconSize="24" styleClass="glyph-white-sm"/>
                </graphic>
                <tooltip>
                    <Tooltip text="Volume"/>
                </tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
