<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>


<BorderPane fx:id="root" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="concordia.soen6611.igo_tvm.controllers.PaymentSuccessController"
            prefHeight="700.0" prefWidth="1200.0" stylesheets="@../styles/PaymentSuccess.css">

    <!-- ===== HEADER ===== -->
    <top>
        <HBox spacing="16" alignment="CENTER_LEFT" styleClass="header">
            <padding><Insets top="14" right="22" bottom="14" left="22"/></padding>

            <HBox alignment="CENTER_LEFT" spacing="6">
                <ImageView fitWidth="32" fitHeight="32" preserveRatio="true" onMouseClicked="#onBrandClick">
                    <image><Image url="@../images/maple.png"/></image>
                </ImageView>
                <Label text="STM" styleClass="brand" fx:id="brandLink" onMouseClicked="#onBrandClick"/>
            </HBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Label styleClass="title" fx:id="confirmationLabel"/>
            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="clockLabel" styleClass="clock" minWidth="150" text="Nov 27, 2024&#10;10:31 AM"/>
        </HBox>
    </top>


    <center>
        <VBox spacing="22" alignment="TOP_CENTER">
            <padding><Insets top="32" right="26" bottom="26" left="26"/></padding>

            <!-- Success banner -->
            <HBox spacing="28" alignment="CENTER_LEFT" maxWidth="1000"
                  styleClass="ps-banner">
                <padding><Insets top="58" right="20" bottom="58" left="20"/></padding>

                <!-- icon -->
                <StackPane styleClass="ps-icon-wrap">
                    <de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView glyphName="CHECK_CIRCLE" glyphSize="46" styleClass="ps-icon"/>
                </StackPane>

                <!-- headline -->
                <Label fx:id="successTitle"
                       styleClass="ps-title" maxWidth="Infinity" />
            </HBox>

            <!-- printing line -->
            <Label fx:id="printingLine"
                   styleClass="ps-subtitle" maxWidth="980" />

            <!-- QR Code preview -->
            <ImageView fx:id="qrImageView"
                       fitWidth="180" fitHeight="180"
                       preserveRatio="true"
                       style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8,0,0,3);">
                <image>
                    <Image url="@../images/qr_code.png"/>
                </image>
            </ImageView>
            <!-- actions -->
            <HBox spacing="18" alignment="CENTER">
                <Button fx:id="printBtn" onAction="#onPrintReceipt"
                        styleClass="ps-btn ps-btn--primary" prefWidth="260" prefHeight="54"
                        style="-fx-border-color: #0b74de;-fx-text-fill: white;
                                -fx-background-color: linear-gradient(to bottom right, #2563eb, #4f46e5);">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER">
                            <ImageView fitWidth="28" fitHeight="28" preserveRatio="true">
                                <image><Image url="@../images/print.png" /></image>
                            </ImageView>
                            <Label fx:id="printBtnLabel" styleClass="ps-btn-label"
                                   style="-fx-text-fill: white;-fx-font-size: 18px;-fx-font-weight: 700;"/>
                        </HBox>
                    </graphic>
                </Button>

                <Button fx:id="doneBtn" onAction="#onDone"
                        styleClass="ps-btn ps-btn--primary" prefWidth="220" prefHeight="54"
                        style="-fx-background-color: linear-gradient(to bottom right, #2563eb, #4f46e5);
                        -fx-border-color: #0b74de;-fx-text-fill: white;">
                    <graphic>
                        <HBox spacing="10" alignment="CENTER">
                            <ImageView fitWidth="28" fitHeight="28" preserveRatio="true">
                                <image><Image url="@../images/check-mark.png"/></image>
                            </ImageView>
                            <Label fx:id="doneBtnLabel" styleClass="ps-btn-label"
                                   style="-fx-text-fill: white;-fx-font-size: 18px;-fx-font-weight: 700;"/>
                        </HBox>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </center>


    <!-- ===== FOOTER ===== -->
    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer" spacing="10">
            <padding><Insets top="0" right="18" bottom="15" left="18"/></padding>

            <Label styleClass="help" fx:id="helpLabel" onMouseClicked="#onHelpClick"/>

            <Region HBox.hgrow="ALWAYS"/>  <!-- pushes volume button to the right -->

            <Button fx:id="volumeBtn" onAction="#onVolume" styleClass="footer-icon-btn"
                    prefWidth="44" prefHeight="36" minWidth="44" minHeight="36">
                <graphic>
                    <FontAwesomeIconView glyphName="VOLUME_UP" styleClass="glyph-white-sm" glyphSize="24"/>
                </graphic>
                <tooltip><Tooltip text="Volume"/></tooltip>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
